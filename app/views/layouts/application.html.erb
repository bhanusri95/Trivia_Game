<!DOCTYPE html>
<html>
  <head>
    <title>TriviaGame</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
  	<header class="navbar navbar-fixed-top navbar-inverse">
      <div class="navbar-inner">
        <div class="container">
          <nav>
            <ul class="nav pull-right">
              <li><%= link_to "Home",    '/users/home' %></li>
              <% if signed_in? %>
                <li><%= link_to "LogOut",    '/signin' %></li>
                <li><%= link_to "Create Trivia", '/signup' %></li>
                <li><%= link_to "Answer Trivia", '/signup' %></li>
                <li><%= link_to "High scores", '/signup' %></li>
              <% else %>
                <li><%= link_to "Login",    '/signin' %></li>
                <li><%= link_to "Register", '/signup' %></li>
              <% end %>
            </ul>
          </nav>
        </div>
      </div>
    </header>

    <%= yield %>
  </body>
</html>
