<h1 style="margin-top: 50px" class="jumbotron text-center">My Score Card</h1>

<div class="row">

  <div class="span6 offset3">

    <%if !@score.nil? %>

        Your Total Score is: <%= @total_score %>

        <table class="table table-striped">
        <thead>
            <th>
                Category
            </th>
            <th>
                Score
            </th>
        </thead>
        <%= @score.each do |score|%>
            
            <tr>
                <td>
                    <%= score.tag.name %>
                </td>
                <td>
                    <%= score.points%>
                </td>
            </tr>


        <% end %>


    </table>

    <% else %>
        Sorry!! You have not answered any questions!!
    <% end %>

  </div>
</div>